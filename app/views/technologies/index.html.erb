<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Technologies</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Technology</th>
        <th>Date created</th>
        <th>Version</th>
        <th>Desc</th>
        <th>Logo</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @technologies.each do |tech| %>
      <tr>
        <td><%= tech.technology %></td>
        <td><%= tech.date_created %></td>
        <td><%= tech.version %></td>
        <td><%= tech.desc %></td>
        <td><%= image_tag tech.logo, class: 'logo' %></td>
        <td><%= tech.user_id %></td>
        <td><%= link_to 'Show', tech , class: 'btn btn-info'%></td>
        <% if user_signed_in? && tech.user_id == current_user.id %>
        <td><%= link_to 'Edit', edit_technology_path(tech) , class: 'btn btn-info'%></td>
        <td><%= link_to 'Destroy', tech, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-info'%></td>
      </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>
